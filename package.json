{
    "name": "vunit-by-hgb",
    "displayName": "VUnit by HGB",
    "description": "Run your VUnit tests from the sidebar",
    "author": "jakobjung10",
    "publisher": "jakobjung10",
    "license": "SEE LICENSE IN LICENSE",
    "version": "0.4.0",
    "preview": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/jakobjung10/vunit-by-hgb"
    },
    "engines": {
        "vscode": "^1.59.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "VUnit",
        "test",
        "testing",
        "VHDL",
        "vhdl",
        "verilog",
        "system verilog",
        "test controller",
        "test explorer"
    ],
    "activationEvents": [
        "workspaceContains:*.vhd",
        "onLanguage:vhdl",
        "onLanguage:verilog",
        "workspaceContains:*.v"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "VUnit Test Controller",
            "properties": {
                "vunit-by-hgb.runpy": {
                    "title": "run.py",
                    "description": "Path to VUnit python script (run.py) relative to workspaceFolder.",
                    "type": "string",
                    "scope": "window"
                },
                "vunit-by-hgb.python": {
                    "title": "Python executable",
                    "description": "Path to python executable",
                    "type": "string",
                    "default": "python"
                },
                "vunit-by-hgb.shellOptions": {
                    "description": "VUnit run.py command line options when running tests.",
                    "type": "string",
                    "default": ""
                },
                "vunit-by-hgb.guiOptions": {
                    "description": "VUnit run.py command line options when running GUI, -g should not be added here.",
                    "type": "string",
                    "default": ""
                },
                "vunit-by-hgb.exportJsonOptions": {
                    "description": "VUnit run.py command line options when discovering test with --export-json.",
                    "type": "string",
                    "default": ""
                },
                "vunit-by-hgb.matchProblems": {
                    "description": "Display Errors and Warnings from VUnit as Problems",
                    "type": "boolean",
                    "default": true
                },
                "vunit-by-hgb.matchAssertionFailure": {
                    "description": "Display Assertion-Failures from VUnit as Problems",
                    "type": "boolean",
                    "default": true
                }
            }
        },
        "menus": {
            "testing/item/context":[
                
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "package": "vsce package",
        "publish": "vsce publish",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "tree-kill": "1.2.2",
        "uuid-random": "1.3.0"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/vscode": "^1.78.0",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "@typescript-eslint/parser": "^2.26.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.1",
        "tslib": "^1.11.1",
        "typescript": "^4.1.2",
        "vsce": "^1.75.0",
        "vscode-test": "^1.6.1"
    }
}
